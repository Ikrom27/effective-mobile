<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="travelInput">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/travelInputAppearance</item>
        <item name="android:background">@null</item>
    </style>

    <style name="nonClickable">
        <item name="android:clickable">false</item>
        <item name="android:longClickable">false</item>
    </style>

    <style name="separator">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
    </style>
    
    <style name="travelCard">
        <item name="android:layout_width">296dp</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:background">@drawable/bg_rectangle_rounded_16</item>
        <item name="elevation">4dp</item>
    </style>
    
    <style name="smallDarkBtn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">@dimen/btn_small_width</item>
        <item name="android:layout_height">@dimen/btn_small_height</item>
        <item name="android:background">@drawable/bg_rounded_rectangle</item>
        <item name="android:backgroundTint">@color/grey4</item>
    </style>
</resources>
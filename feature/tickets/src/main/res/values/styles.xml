<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Components -->
    <style name="placeLabel" parent="fullWidthText">
        <item name="android:textAppearance">@style/placeLabelAppearance</item>
    </style>
    <style name="placeDescription" parent="fullWidthText">
        <item name="android:textAppearance">@style/placeDescriptionAppearance</item>
    </style>
    <style name="tripOriginInput" parent="fullWidthText">
        <item name="android:imeOptions">actionDone</item>
        <item name="android:textColorHint">@color/grey6</item>
        <item name="android:textColor">@color/text1</item>
        <item name="android:textAppearance">@style/tripTextAppearance</item>
        <item name="android:background">@null</item>
    </style>
    <style name="TripOriginText" parent="fullWidthText">
        <item name="android:textColor">@color/text2</item>
        <item name="android:textAppearance">@style/tripTextAppearance</item>
    </style>
    <style name="flightsLabel" parent="fullWidthText">
        <item name="android:textAppearance">@style/flightsLabelAppearance</item>
    </style>
    <style name="flightsPrice">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/flightsPriceAppearance</item>
    </style>
    <style name="flightsTimeRange" parent="fullWidthText">
        <item name="android:textAppearance">@style/flightsTimeRangeAppearance</item>
    </style>

    <style name="destinationButtonLabel">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">34dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="travelCard">
        <item name="android:layout_width">296dp</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:background">@drawable/bg_rectangle_rounded_16</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="smallDarkBtn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">@dimen/btn_small_width</item>
        <item name="android:layout_height">@dimen/btn_small_height</item>
        <item name="android:background">@drawable/bg_rectangle_rounded_50</item>
        <item name="android:backgroundTint">@color/search_travel_points_card</item>
        <item name="android:backgroundTintMode">src_atop</item>
    </style>

    <style name="wideBtn">
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/wideButtonTextAppearance</item>
    </style>

    <style name="notifyText" parent="fullWidthText">
        <item name="android:textAppearance">@style/notifyTextAppearance</item>
    </style>

    <style name="titleDelegate" parent="fullWidthText">
        <item name="android:textAppearance">@style/titleTextAppearance</item>
    </style>

    <style name="all_tickets_toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginHorizontal">@dimen/main_horizontal_margin</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:background">@color/surface_background</item>
        <item name="android:paddingVertical">8dp</item>
    </style>

    <style name="toolbarTitle" parent="fullWidthText">
        <item name="android:textColor">@color/text1</item>
        <item name="android:textAppearance">@style/semibold16</item>
    </style>

    <style name="toolbarSubtitle" parent="fullWidthText">
        <item name="android:textColor">@color/text6</item>
        <item name="android:textAppearance">@style/medium14</item>
    </style>

    <style name="badgeStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/blue</item>
        <item name="android:backgroundTint">@color/blue</item>
    </style>

    <style name="ticketPrice">
        <item name="android:textColor">@color/text1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/semibold22</item>
    </style>

    <style name="ticketTimeRange">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text1</item>
        <item name="android:textAppearance">@style/medium14Italic</item>
    </style>

    <style name="airlineCode">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text6</item>
        <item name="android:textAppearance">@style/medium14Italic</item>
    </style>

    <style name="ticket_info" parent="fullWidthText">
        <item name="android:textColor">@color/text1</item>
        <item name="android:textAppearance">@style/medium14</item>
    </style>

    <style name="badgeText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text1</item>
        <item name="android:layout_marginHorizontal">10dp</item>
        <item name="android:textAppearance">@style/medium14Italic</item>
    </style>
</resources>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:gestureInsetBottomIgnored="true"
    tools:context=".SearchFragment">

    <View
        android:id="@+id/handleView"
        android:layout_width="38dp"
        android:layout_height="5dp"
        android:background="@drawable/bg_rectangle_rounded_50"
        android:backgroundTint="@color/handle_color"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="@dimen/main_horizontal_margin"
        app:layout_constraintTop_toBottomOf="@id/handleView" />

</androidx.constraintlayout.widget.ConstraintLayout>